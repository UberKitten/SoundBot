{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Update Python Packages",
            "type": "shell",
            "command": "uv sync",
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "label": "Update Node Packages",
            "type": "shell",
            "command": "npm install",
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "label": "Build Web",
            "type": "shell",
            "command": "npm run build",
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "label": "Watch Web",
            "type": "shell",
            "command": "npm run dev",
            "group": "build",
            "isBackground": true,
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated"
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^\\[.+\\] Starting 'watch'",
                    "endsPattern": "^\\[.+\\] Starting 'watch(Styles|Scripts)'"
                }
            }
        },
        {
            "label": "Update All Packages",
            "dependsOn": ["Update Python Packages", "Update Node Packages"],
            "dependsOrder": "parallel",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            }
        },
        {
            "label": "Update & Build All",
            "dependsOn": ["Update All Packages", "Build Web"],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            }
        },
        {
            "label": "Update & Watch Web",
            "dependsOn": ["Update All Packages", "Watch Web"],
            "dependsOrder": "sequence",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            }
        }
    ]
}
